<form class="form">
    {{#each fields}}
        {{#with this}}
            {{{Input 
                name="{{name}}"
                label="{{label}}"
                type="{{type}}"
                placeholder="{{placeholder}}"
                required="{{required}}"
                value=(lookup ../values name)
                error=(lookup ../errors name)
            }}}
        {{/with}}
    {{/each}}

    <div class="form-actions">
        {{#each buttons}}
            {{#with this}}
                {{{Button 
                    type="{{type}}"
                    modifier="{{modifier}}"
                    text="{{text}}"
                    onClick=onClick
                }}}
            {{/with}}
        {{/each}}
    </div>
</form>
