{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended", 
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "max-len": [1, 100],
    "max-params": [2, 3],
    "@typescript-eslint/no-unused-vars": "error"
    },
  "ignorePatterns": ["node_modules/*", "dist/*"]
} 